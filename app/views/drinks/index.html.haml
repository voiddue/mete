- model_class = Drink
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:bottle_size)
      %th= model_class.human_attribute_name(:caffeine)
      %th= model_class.human_attribute_name(:donation_recommendation)
      %th= model_class.human_attribute_name(:logo_url)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @drinks.each do |drink|
      %tr
        %td= link_to drink.id, drink_path(drink)
        %td= drink.name
        %td= drink.bottle_size
        %td= drink.caffeine
        %td= drink.donation_recommendation
        %td= drink.logo_url
        %td=l drink.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_drink_path(drink), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), drink_path(drink), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_drink_path, :class => 'btn btn-primary'
