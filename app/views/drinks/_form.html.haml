= form_for @drink, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :bottle_size, :class => 'control-label'
    .controls
      = f.text_field :bottle_size, :class => 'text_field'
  .control-group
    = f.label :caffeine, :class => 'control-label'
    .controls
      = f.text_field :caffeine, :class => 'text_field'
  .control-group
    = f.label :donation_recommendation, :class => 'control-label'
    .controls
      = f.text_field :donation_recommendation, :class => 'text_field'
  .control-group
    = f.label :logo_url, :class => 'control-label'
    .controls
      = f.text_field :logo_url, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), drinks_path, :class => 'btn'
